        {
            "name": "XD Parser",
            "type": "python",
            "request": "launch",
            "program": "xdlang/run.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "XD Run",
            "type": "python",
            "request": "launch",
            "program": "xdlang/cli.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "test_programs/func.xd"
